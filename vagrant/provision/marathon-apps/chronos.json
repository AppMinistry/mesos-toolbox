
{
  "id": "/chronos",
  "cpus": 0.1,
  "instances": 1,
  "mem": 256,
  "args": [
    "--zk_hosts", "192.168.33.99:2181",
    "--master", "zk://192.168.33.99:2181/mesos"
  ],
  "portDefinitions": [{
    "name": "http-api",
    "protocol": "tcp"
  },{
    "name": "libprocess",
    "protocol": "tcp"
  }],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/chronos:v3.0.2",
      "network": "HOST",
      "forcePullImage": false
    }
  }
}